    // }

    right
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    top
    {
        type            fixedNormalSlip;
        n               (0 1 0);
    }

    bottom
    {
        type            slip;
        value           uniform (0 0 0);
    }

    frontAndBack
    {
        type            empty;
    }
}

